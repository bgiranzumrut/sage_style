<% content_for :title, "Products" %>

<p style="color: green"><%= notice %></p>

<h1 class="page-title">All Products</h1>

<!-- Filter Buttons -->
<div class="filters text-center mb-4">
  <%= link_to "All Products", products_path, class: "btn-see-all mx-2" %>
  <%= link_to "On Sale", products_path(filter: "on_sale"), class: "btn-see-all mx-2" %>
  <%= link_to "New", products_path(filter: "new"), class: "btn-see-all mx-2" %>
  <%= link_to "Recently Updated", products_path(filter: "recently_updated"), class: "btn-see-all mx-2" %>
</div>

<!-- Product Grid -->
<div class="product-grid">
  <% @products.each do |product| %>
    <div class="product-card">
      <h5><%= product.name %></h5>

      <% if product.image.attached? %>
        <%= image_tag product.image.variant(resize_to_limit: [250, 250]), alt: product.name %>
      <% end %>

      <p class="product-price">$<%= product.price %></p>
      <%= link_to "See Details", product_path(product), class: "product-details-btn" %>
    </div>
  <% end %>
</div>



<style>
.product-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
  gap: 2rem;
  justify-content: center;
  margin: 2rem 0;
}

.product-card {
  max-width: 280px;
  background-color: $white;
  border: 1px solid #ddd;
  border-radius: 12px;
  padding: 1rem;
  text-align: center;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
}

.product-card img {
  max-width: 100%;
  height: auto;
  margin-bottom: 0.75rem;
  border-radius: 8px;
}

.product-price {
  font-weight: 500;
  margin-bottom: 0.5rem;
}

.product-details-btn {
  font-size: 1rem;
  font-weight: 600;
  color: $dark-sage;
  border: 1px solid $dark-sage;
  padding: 6px 12px;
  border-radius: 8px;
  text-decoration: none;
  transition: all 0.2s ease;
  display: inline-block;
}

.product-details-btn:hover {
  background-color: $dark-sage;
  color: white;
}

.btn-see-all {
  font-size: 1rem;
  font-weight: 600;
  padding: 10px 20px;
  border-radius: 10px;
  background-color: transparent;
  border: 2px solid $dark-sage;
  color: $dark-sage;
  transition: all 0.2s ease;
}

.btn-see-all:hover {
  background-color: $dark-sage;
  color: white;
}
</style>