
<div class="product-detail text-center mx-auto" style="margin-top: 8rem;">

  <h1 class="mb-4"><%= @product.name %></h1>

  <% if @product.image.attached? %>
    <%= image_tag @product.image, class: "img-fluid mb-4", style: "max-height: 350px;" %>
  <% end %>

  <p class="description text-muted mb-3"><%= @product.description %></p>

  <p class="price h4 mb-4">$<%= number_with_precision(@product.price, precision: 2) %></p>

  <%= link_to "Back to Products", products_path, class: "product-btn" %>
  <%= button_to 'Add to Cart', add_to_cart_path(@product.id), method: :post, class: 'product-btn' %>

</div>

<style>
.product-btn {
  font-size: 1rem;
  font-weight: 600;
  padding: 10px 20px;
  border-radius: 8px;
  border: 2px solid $dark-sage;
  background-color: transparent;
  color: $dark-sage !important;  // ← force link color
  text-align: center;
  text-decoration: none !important; // ← remove underline
  transition: all 0.2s ease;
  display: inline-block;
  margin-top: 0.5rem;

  &:hover {
    background-color: $dark-sage;
    color: $white !important;
    text-decoration: none;
  }
}

// Normalize <button> inside button_to
form button.product-btn {
  all: unset;
  font-size: 1rem;
  font-weight: 600;
  padding: 10px 20px;
  border-radius: 8px;
  border: 2px solid $dark-sage;
  background-color: transparent;
  color: $dark-sage;
  text-align: center;
  text-decoration: none;
  transition: all 0.2s ease;
  display: inline-block;
  margin-top: 0.5rem;
  cursor: pointer;

  &:hover {
    background-color: $dark-sage;
    color: $white;
  }
}</style>


