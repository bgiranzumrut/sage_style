
<div class="product-detail text-center mx-auto" style="margin-top: 8rem;">

  <h1 class="mb-4"><%= @product.name %></h1>

  <% if @product.image.attached? %>
    <%= image_tag @product.image, class: "img-fluid mb-4", style: "max-height: 350px;" %>
  <% end %>

  <p class="description text-muted mb-3"><%= @product.description %></p>

  <p class="price h4 mb-4">$<%= number_with_precision(@product.price, precision: 2) %></p>

  <%= link_to "Back to Products", products_path, class: "btn btn-outline-dark" %>
</div>


<style>
.product-detail {
  margin-top: 4rem;
  max-width: 700px;
  margin: 0 auto;
  text-align: center;

  h1 {
    font-size: 2.2rem;
    color: $dark-sage;
    font-weight: 700;
    margin: 2rem;

  }

  .description {
    font-size: 1.2rem;
    color: #555;
    margin: 2rem;
  }

  .price {
    font-size: 1.4rem;
    font-weight: bold;
    color: $dark-sage;
  }

  a.btn {
    margin-top: 1rem;
    padding: 10px 20px;
  }
}

</style>
