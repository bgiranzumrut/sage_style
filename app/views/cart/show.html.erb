<h1>Your Shopping Cart</h1>

<% if @cart_items.empty? %>
  <p>Your cart is empty.</p>
  <%= link_to 'Browse Products', products_path, class: 'btn btn-primary' %>
<% else %>
  <%= form_with url: update_cart_path, method: :post do %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Product</th>
          <th>Quantity</th>
          <th>Price</th>
          <th>Subtotal</th>
          <th>Remove</th>
        </tr>
      </thead>
      <tbody>
        <% @cart_items.each do |product| %>
          <tr>
            <td><%= product.name %></td>
            <td>
              <%= number_field_tag "quantities[#{product.id}]", @cart[product.id.to_s], min: 1, class: "form-control" %>
            </td>
            <td>$<%= '%.2f' % product.price %></td>
            <td>
              $<%= '%.2f' % (product.price * @cart[product.id.to_s]) %>
            </td>
            <td>
              <%= button_to 'Remove', remove_from_cart_path(product.id), method: :delete, class: 'btn btn-danger btn-sm' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= submit_tag 'Update Cart', class: 'btn btn-success' %>
  <% end %>

  <br>
  <%= link_to 'Continue Shopping', products_path, class: 'btn btn-link' %>
<% end %>
